datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model DiscordProfile {
  id String @id @default(uuid())
  userId String @unique
  name String
  imageUrl String @db.Text
  email String @db.Text

  servers DiscordServer[]
  members DiscordMember[]
  channels DiscordChannel[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DiscordServer {
  id String @id @default(uuid())
  name String
  imageUrl String
  inviteCode String @db.Text
  
  profileId String
  profile DiscordProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  members DiscordMember[]
  channels DiscordChannel[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([profileId])
}

enum DiscordMemberRole {
  ADMIN
  MODERATOR
  GUEST
}

model DiscordMember {
  id String @id @default(uuid())
  role DiscordMemberRole @default(GUEST)

  profileId String
  profile DiscordProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  serverId String
  server DiscordServer @relation(fields: [serverId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([profileId])
  @@index([serverId])
}

enum DiscordChannelType {
  TEXT
  AUDIO
  VIDEO
}

model DiscordChannel {
  id String @id @default(uuid())
  name String
  type DiscordChannelType @default(TEXT)

  profileId String
  profile DiscordProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  serverId String
  server DiscordServer @relation(fields: [serverId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([profileId])
  @@index([serverId])
}